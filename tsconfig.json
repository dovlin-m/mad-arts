{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
    ],
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/typescript-build",
      "@nuxt/content",
      "@nuxtjs/i18n",
      "@types/node",
      "@nuxt/types",
      "node"
    ]
  },
  "include": [
    "./**.d.ts",
    "./**/*.ts",
    "./**/*.vue",
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
