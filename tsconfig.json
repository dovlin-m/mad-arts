{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxt/typescript-build",
      "@types/node",
      "@nuxtjs/i18n"
    ]
  },
  "include": [
    "./vue-shim.d.ts",
    "./**/*.ts",
    "./**/*.vue"
  ],
  "exclude": [
    ".nuxt",
    "dist",
    "node_modules"
  ]
}
